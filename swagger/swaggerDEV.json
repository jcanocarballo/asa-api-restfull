  "definitions": {
    "body_login": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties":{
        "email":{
          "type":"string",
          "example":"jcanocarballo@gmail.com"
        },
        "password":{
          "type":"string",
          "example":"123456"
        }
      }
    },
    "body_register": {
      "type": "object",
      "required": [
        "name",
        "email",
        "password"
      ],
      "properties":{
        "name":{
          "type":"string",
          "example":"Julian Cano Carballo"
        },
        "email":{
          "type":"string",
          "example":"jcanocarballo@gmail.com"
        },
        "password":{
          "type":"string",
          "example":"123456"
        }
      }
    },
    "Usuario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "listaCategoria": {
      "type": "object",
      "properties":{
        "ok":{
          "type": "boolean",
          "example": true
        },
        "categorias": {
          "type":"array",
          "items":{
            "$ref": "#/definitions/Categoria"
          }
        }
      }
    },
    "Categoria":{
      "type":"object",
      "properties":{
        "id":{
          "type":"integer",
          "example": 1
        },
        "nombre_clave_categoria":{
          "type":"string",
          "example": "Servicio"
        },
        "nombre_completo":{
          "type": "string",
          "example": "Servicio"
        },
        "descripcion": {
          "type":"string",
          "example": "alineacion, balanceo, montajes, etc"
        }
      }
    },
    "Response_login":{
      "type":"object",
      "properties":{
        "ok":{
          "type":"boolean",
          "example": true
        },
        "id":{
          "type":"integer",
          "example": 1     
        },
        "name":{
          "type":"string",
          "example":"Julian"
        },
        "email":{
          "type": "string",
          "example":"jcanocarballo@gmail.com"
        },
        "token":{
          "type":"string",
          "example":"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6Ijc4N2I4ZTdjLWI4YzQtMTFlYi1hMjU2LTE2YTk2ZDZlZTNlYiIsIm5hbWUiOiJKdWxpYW4gQ2FubyIsImVtYWlsIjoiamNhbm9jQGdtYWlsLmNvbSIsImlhdCI6MTYyMTQ1ODY5OCwiZXhwIjoxNjIxNDY1ODk4fQ.TN6ixTW7TBpdj9XfI_-dUPcJaA2Xv66EyzeKjZz6sak"
        }
      }
    },
    "400_login":{
      "type":"object",
      "properties":{
        "ok":{
          "type":"boolean",
          "example": false
        },
        "msg":{
          "type":"string",
          "example": "El usuario y/o contraseña no validos"
        }
      }
    },
    "400_renew":{
      "type":"object",
      "properties":{
        "ok":{
          "type":"boolean",
          "example": false
        },
        "msg":{
          "type":"string",
          "example": "Token no válido"
        }
      }
    }
